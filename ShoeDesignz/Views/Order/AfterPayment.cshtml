@model List<ShoeDesignz.Models.Order>
@{
    ViewData["Title"] = "AfterPayment";
    var products = this.ViewContext.RouteData.Values["id"];
}
<script>
    function hideFunction() {
        var x = document.getElementById("myHide");
        if (x.style.display === "none") {
            x.style.display = "block";
        } else {
            x.style.display = "none";
        }
    } 
</script>

<h1>Order History</h1>
<h3>Payment Sent</h3>
@foreach (var item in Model)
{
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col">Order #</th>
                <th scope="col">Date</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@item.ID</th>
                <td>@item.Now.Month/@item.Now.Day/@item.Now.Year</td>
                <td>@item.UserID</td>
                <td> <a asp-controller="Order" asp-route-id="@item.ID" asp-action="Details">View Order Details</a></td>
                <td></td>
            </tr>
        </tbody>
    </table>
}
<h4>Please check your email for a receipt.</h4>

<div id="myHide">
    <button onclick="hideFunction()"> Payment Submitted </button>
</div>

<p><br /></p>
<p><br /></p>
<a asp-controller="Product" asp-action="Products">Back to the store.</a>
<h6>Thank you for shopping at ShoeDesignz</h6>

